@font-face
	font-family 'PT_SansCaptionWebBold'
	src url('../fonts/PT_SansCaptionWebBold.woff') format('woff')
	font-style normal

@font-face
	font-family 'PT_SansCaptionWebRegular'
	src url('../fonts/PT_SansCaptionWebRegular.woff') format('woff')
	font-style normal

@font-face
	font-family 'PTSans-Narrow'
	src url('../fonts/PTSans-Narrow.woff') format('woff')
	font-style normal

@font-face
	font-family 'PTSans-NarrowBold'
	src url('../fonts/PTSans-NarrowBold.woff') format('woff')
	font-style normal


@font-face
	font-family 'PTSans-Bold'
	src url('../fonts/PTSans-Bold.woff') format('woff')
	font-style normal
	

@font-face
	font-family 'PTSans-BoldItalic'
	src url('../fonts/PTSans-BoldItalic.woff') format('woff')
	font-style normal
	

@font-face
	font-family 'PTSans-Italic'
	src url('../fonts/PTSans-Italic.woff') format('woff')
	font-style normal

@font-face
	font-family 'PTSans-Regular'
	src url('../fonts/PTSans-Regular.woff') format('woff')
	font-style normal
	
.text-center
	text-align center !important

.text-right
	text-align right

.text-left
	text-align left !important

.text-center-md
	@media $medium_and_down
		text-align center !important

.text-center-sm
	@media $small-and-down
		text-align center !important

.truncate-on-md
	@media $medium-only
		display block
		white-space nowrap
		overflow hidden
		text-overflow ellipsis

