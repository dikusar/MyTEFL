/**/
/* ! widget latest commet */
/**/
.help-title
	display block
	position relative
	z-index 1
	border 2px solid $main-color
	border-radius 2px
	padding 6px 20px 6px 18px
	cursor pointer
	margin-top 11px
	font-weight 700
	.accordion-icon
		position absolute
		width 20px
		height 20px
		right 17px
		top 50%
		transform translateY(-50%)
		&:before
			content ""
			display block
			width 14px
			height 2px
			background-color $main-color
			position absolute
			top 6px
			left 0
			transform rotate(20deg)
		&:after
			content ""
			display block
			width 14px
			height 2px
			background-color $main-color
			position absolute
			top 11px
			left 0
			transform rotate(-20deg)
.accordion
	font-size pixelsToEm(18)
	line-height 24px
	.content
		padding 18px
	.content + .content-title
		margin-top 11px
	.content-title
		position relative
		z-index 1
		border 2px solid #d9d9d9
		border-radius 2px
		padding 6px 20px 6px 18px
		cursor pointer
		&:hover
			border-color $orange
		&.active
			border-color #d9d9d9
			border-bottom 0
			background-color #f2f2f2
		& + .content
			margin-top -1px
			border 2px solid #d9d9d9
			border-top 0
			background-color #f2f2f2
			border-radius 2px
		.accordion-icon
			position absolute
			width 20px
			height 20px
			right 17px
			top 50%
			transform translateY(-50%)
			&:before
				content ""
				display block
				width 20px
				height 4px
				background-color $main-color
				position absolute
				top 8px
				left 0
			&:after
				content ""
				display block
				width 4px
				height 20px
				background-color $main-color
				position absolute
				top 0
				left 8px
		&.active .accordion-icon:after
				opacity 0
