.b-reg
	margin-top 35px
	
	&__container
		display flex
	
	&__item
		width 33%
		padding-right 80px
		
		&:last-of-type
			padding-right 0
		
		&.modules-1
			padding-left 40px
			
			.list-st1.content-p
				line-height 1.45
		
		&.modules-2
			padding-left 31px
