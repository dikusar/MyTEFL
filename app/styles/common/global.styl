/**/
/* blog item */
/**/
.title-st-2
	position relative
	font-size pixelsToEm(24)
	line-height 36px
	font-weight 700
	color $main-color
		
.blog-item
	
	.avatar
		position relative
		float left
		padding-right 20px
		margin-right 15px
		font-family PTSans-Bold
		font-size pixelsToEm(60)
		
		&:after
			display block
			content ''
			position absolute
			bottom 7px
			right 0
			border-radius 50%
			width 12px
			height 12px
			background-color #efac1b
			z-index 3
		
		&:before
			display block
			content ''
			position absolute
			top 15px
			right 6px
			width 38px
			height 91%
			background-color rgba(255,255,255,0.5)
			border-left 1px solid #bcbcbc
			transform rotate(40deg)
			z-index 2
			
	
	.content
		overflow hidden
	
	&_bg
		padding 20px
		background-color #f0f0f0
	
	&_border,
	&_border_blue
		padding-left 20px
		padding-right 25px
		border 1px solid #d9d9d9
		border-radius 3px
	
	&_border
		.title-st-2 .avatar
			position absolute
			top -7px
			right 0
	
	&_border_blue
		border-color #62a6d2
		
		.col span
			display block
			margin-bottom 20px
			
			&.text-main-color,
			&.text-accent
				font-family PTSans-Bold
			
			&:last-of-type
				margin-bottom 0
	
	&_job-page
		position relative
		border-width 5px
		
		.fa-angle-right
			width 53px
			height 53px
			border-radius 50%
			color #fff
			background-color #4e97c4
			text-align center
			margin-left 15px
			padding-top 10px
		
		img
			position absolute
			bottom 25px
			left 51%
	
	p + p
		margin-bottom 35px

	& + .blog-item
		margin-top 50px
	p, .context-link
		font-size pixelsToEm(18)
		line-height 24px
		
	.media-part
		display flex
		background-color #f7f7f7
		@media $small-and-down
			flex-wrap wrap
		
		img
			width 100%
			
		.context
			align-self center
			padding 15px 20px
			width 50%
			@media $small-and-down
				width 100%
				
			.context-icon
				font-size pixelsToEm(26)
				color $main-color
			.context-link
				display inline-block
				color $main-color
				&:after
					display inline-block
					content ">"
					padding-left 5px
					transition: all .3s ease;
				&:hover:after
					transform translateX(5px)
					
		.pic
			width 50%
			@media $small-and-down
				width 100%

