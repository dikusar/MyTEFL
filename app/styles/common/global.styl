/* ! flex */
/**/
.course-enroll
	display flex
	flex-wrap wrap
	.col
		align-self center
.course-enroll_slog
	font-size pixelsToEm(60)
	line-height 58px
	color #efac1b
	font-weight 700

.course-enroll_context
	font-size pixelsToEm(24)
	line-height 1.4

.course-enroll_title
	color #efac1b
	font-size pixelsToEm(48)
	font-weight 700

.course-enroll_container 
	padding-left 25px

.course-enroll_form
	font-size pixelsToEm(18)
	line-height 1.7
.course-enroll_form:after 
	content ''
	display table
	clear both
.course-enroll_form input:not(.button-st1):not(.checkbox_enroll), .course-enroll_form .enroll-country-select 
	color #999
	background-color #fff
	border 0
	box-shadow none
	border-radius 4px
	padding 18px 10px
	margin 0 17px 13px 0
.course-enroll_form .form-row, .course-enroll_form .enroll-country-select 
	width calc(100% - 17px)
.course-enroll_form .form-col-6 
	float left
	width calc(50% - 17px)
.placement-item-pic 
	font-size 0
	border 1px solid #ccc
.placement-item-pic img 
	width 100%
	max-width 100%
.placement-item-content 
	color #555
	padding 25px 20px 40px 20px
	background-color #f9f9f9
	border 1px solid #ccc
.placement-item-content .title-st-2 
	font-weight 400
	color inherit
.placement-item-content .flag 
	position relative
	z-index 5
	float left
	margin-top -80px

