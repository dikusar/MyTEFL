/**/
/* gallery */
/**/
.k-gallery-grid
	text-align center
	margin 0 -3px
	font-size 0
	
	.gallery-item
		position relative
		max-width 243px
		display inline-block
		margin 3px
		overflow hidden
		img
			transition all 0.3s
		&:hover img
			transform scale(1.1)
			transition all 4s
		.gallery-title
			position absolute
			z-index 3
			top 50%
			left 0
			right 0
			color #fff
			font-size 32px
			font-weight 700
			text-shadow 0 3px 1px rgba(0,0,0,0.3)
			text-transform uppercase
			transform translateY(-50%)
	&-footer
		.gallery-item
			max-width 310px
	
	&-footer-2
		.gallery-item
			max-width inherit
			width 409px
			height 235px
		
		img
			width 100%
			height 100%
	

/**/
/* ! gallery*/
/**/

/**/
/* Parallax */
/**/

.k-parallax-section
	background-image url('../images/enroll-form.jpg')
	position relative
	z-index 1
	background-size cover
	background-attachment fixed
	@media $medium_and_down
		background-image url('../images/enroll-form-mobile.jpg')
		background-attachment inherit
	
	&.overlay:before,
	&.overlay-half:after
		content ""
		position absolute
		display block
		top 0
		right 0
		left 0
		bottom 0
		z-index 1
		background-color #000000
		opacity 0.45
		@media $medium_and_down
			content none
		
	&.overlay-half:after
		left 50%
		
	.row
		position relative
		z-index 4
