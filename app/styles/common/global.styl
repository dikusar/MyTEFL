/**/	
/*button*/
/**/
.button-st1
	display inline-block
	border 3px solid #4e97c4
	color #4e97c4
	padding 9px 60px
	box-sizing border-box
	background-color transparent
	-webkit-appearance none
	font-weight 700
	white-space nowrap
	transition all .3s ease
	@media $medium_and_down
		padding 9px 20px
		font-size 1.8vw
	@media $small-and-down
		font-size 3.1vw
		max-width 320px!important
		margin-left auto
		margin-right auto
		display block
	
	&.add-triangle:after
		content ""
		display inline-block
		margin-left 6px
		width 0
		height 0
		border-style solid
		border-width 6px 0 6px 10px
		border-color transparent transparent transparent $orange
	&.full-width
		width 100%
		text-align center
	&:hover
		color #ffffff
		background-color #4e97c4
	&.alt
		background-color #4e97c4
		color #ffffff
		&:hover
			background-color transparent
			color #4e97c4
	&.text-orange
		color $orange
	&.orange-bg
		background-color $orange
		color $main-color
		border-color $orange
		&:hover
			background-color transparent
			color $orange
	&.orange
		border-color $orange
		color $orange
		&:hover
			background-color $orange
			color #ffffff

.button-st2
	display inline-block
	border 3px solid #aee1fa
	color #4e97c4
	padding 9px 60px
	box-sizing border-box
	background-color #aee1fa
	font-weight 700
	white-space nowrap
	transition all .3s ease
	
	&:hover
		color #aee1fa
		background-color transparent
	

