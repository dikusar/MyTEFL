/**/
/* flex */
/**/
.flex
	display flex
	align-items stretch
	flex-wrap wrap
	
	&.justify-between
		justify-content space-between
		@media $medium_and_down
			justify-content center
	
	&_job-page
		justify-content space-between
		
		.blog-item_border
			width 49%
			@media $small-and-down
				width 100%
	
	&-home-page
		@media $medium_and_down
			background-color #ededed
			
		img
			@media $medium_and_down
				display block
				width 90%
				margin 0 auto
			@media $small-and-down
				width 100%
		
