html,
body
	font-family PTSans-Regular
	color #444444

a
	text-decoration none

b
	font-weight bold
strong,
.strong
	font-weight 700

i
	font-style italic
	
hr, .divider
	border-top 1px solid #fafafa
	border-bottom 1px solid #d8d8d8

.page	
	overflow hidden
	overflow-y auto

.clear
	clear both	
ol
	list-style-type decimal
	margin-left 25px
.cont-fs
	font-size pixelsToEm(24px)
	line-height 30px
.content-p
	font-size pixelsToEm(18)
	line-height 1.2
.lh-40
	line-height 40px
.lh-50
	line-height 50px
.list-st1
	li
		padding-left 20px
	li:before
		display inline-block
		content ''
		width 7px
		height 7px
		line-height 30px
		vertical-align middle
		border-radius 50%
		background-color #366d8f
		margin-left -18px
		margin-right 11px
	li.orange-before:before
		background-color $orange
		
	&.content-p li
		margin 7px 0
		&:before
			width 4px
			height 4px
	&.checked li
		margin 3px 0
		&:before
			font-size: pixelsToEm(15);
			width auto
			height auto
			font-family FontAwesome
			content "\f00c"
			background-color: transparent
			color #4e97c4
	&.orange li:before
		color $orange
	
	&.job-page li
		font-family PTSans-Bold

		&:before
			margin-right 18px
		
