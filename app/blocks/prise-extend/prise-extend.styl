.prise-extend
	// margin 0 auto
	// max-width 1240px
	// width 100%
	
	&__heading-wrapper
		overflow hidden
		display inline-block
	
	&__table
		position relative
		display flex
		// @media (max-width:1240px)
		// 	flex-wrap wrap
		// 	justify-content center
		
		&-title
			display flex
			height 47px
			margin-bottom 10px
			align-content center
			align-items center
			text-align center
			justify-content center
			padding-bottom 10px
			font-family PTSans-Bold
			font-size pixelsToEm(30)
			color #2b6990
			

			& span
				display block
				padding-left 10px
			
			& img
				display block
		
		&-items-wrapper
			display flex
			flex-wrap nowrap
			overflow hidden
			@media (max-width:1260px)
				overflow-x scroll
			@media (max-width:800px)
				& .prise-extend__table-item
					min-width 100%
		
		&-item.side-bar
			position relative
			margin-top 57px
			width 310px
			@media (max-width:1240px)
				margin-top 97px
			@media $small-and-down
				position absolute
				top 294px
				width 60%				
				margin-top 0
				z-index 3

			
			& .prise-extend__table-heading
				font-family PTSans-Bold
				padding 30px
				background-color #366d8f
				@media (max-width:547px)
					padding-left 16px
				@media (max-width:485px)
					padding-left 24%
				
				& .first-line
					font-size pixelsToEm(40)	
					color #fff
					white-space nowrap
				
				& .second-line
					font-size pixelsToEm(61)
					color #ee9d41
				
				& .third-line
					font-size pixelsToEm(35)
					color #ee9d41
					white-space nowrap
					
			& .prise-extend__list._content
				@media $small-and-down
					opacity .7
			
			& .prise-extend__list._content .prise-extend__list-item
				@media (max-width:485px)
					overflow hidden
					text-overflow ellipsis
					white-space nowrap
			
			& .prise-extend__list._footer
				padding 18px
				background-color #366d8f
				@media (max-width: 1240px)
					padding-bottom 30px
				// @media (max-width:485px)
				// 	padding-left 24%
				
				& .prise-extend__list-item
					margin-bottom 30px
					text-transform uppercase
					font-family PTSans-Bold
					
					&:last-of-type
						margin-bottom 0
				

					& span
						display inline-block
						margin-left 15px
						color #fff
					
					& i
						color #ee9d41
			
		&-item.accent
			@media $small-and-down
				width 100%
			
			.prise-extend__table-title
				color #f26522
			
			.prise-extend__table-heading 
				
				& .first
					background-color #f26522
					
					& img
						position absolute
						right 20px
						bottom -31px
						z-index 2
					
				& .second
					background-color #ee9d41
			
			.prise-extend__table-footer
				
				& .second
					background-color #ee9d41		
		
		&-item
			width 100%
			@media (max-width:1240px)
			// 	width 33%	
				margin-top 40px
			// @media (max-width:855px)
			// 	width 50%
			// @media (max-width:485px)
			// 	width 100%

			& .prise-extend__table-heading
				color #fff
				min-width 218px
				text-transform uppercase
				font-family PTSans-Bold
				
			& .first
				position relative
				color #fff
				margin 0 1.5px 3px 1.5px
				text-align center
				padding 29px 25px 19px 26px
				background-color #2f8a88
				line-height 32px
				
				span
					font-size pixelsToEm(36)					
				
				span:last-of-type
					font-size pixelsToEm(24)
			
			& .second
				display block
				color #fff
				margin 0 1.5px
				text-align center
				padding 14px 0 14px 0
				background-color #49b7b3
				line-height 22px
				font-size pixelsToEm(18)
				text-transform none
			
		&-footer
			font-family PTSans-Bold
			
			.first
				padding 20px 0 5px 0
				background-color transparent
				
				span
					color #4987ad
					font-size pixelsToEm(30)
					
				span:first-of-type
					color #475059
					font-size pixelsToEm(18)
					text-decoration line-through
			
			.second
				text-transform uppercase
			
			
		
	&__list._content
			padding 3px 0
			
			& .prise-extend__list-item
				padding 10px 10px 10px 15px
				color #555555
				font-size pixelsToEm(18)
				min-height 38px
				white-space nowrap
				background-color #fff
				
				&.padding-none
					padding 0
				
				&.text-blue
					color #4987ad
					@media $small-and-down
						text-align right !important
						padding-right 20px
					
					.circle
						border-radius 50%
						display inline-block
						border 3px solid
						font-size 16px
						padding 4px
						margin-top 4px
				
				&:nth-child(odd)
					background-color #f9f9f9
				
				& span
					display inline-block
					margin-left 15px
					@media $small-and-down
						display inline
						margin-left 5px
		
		
				
			
				
				
					
				