.brochure
	padding 20px 37px
	background-color #f1f1f1
	border 1px solid #d9d9d9
	border-radius 3px
	overflow hidden
	
	&__title
		margin-bottom 35px
		line-heigt 55px
		font-size pixelsToEm(40)
		color #62a6d2
	
	&__content
		width 55%
		float left
		margin-right 30px
	
	&__text
		margin-bottom 35px
		font-size pixelsToEm(18)
		color #444444
		line-height 25px
	
	&__footer
		padding 24px
		border 1px solid #d9d9d9
		border-radius 3px
	
	&__link
		
		& p
			float left
			margin-right 20px
			font-size pixelsToEm(24)
			color #444444
			line-height 29px
		
		& a
			font-family PTSans-Bold
			color #366d8f
			text-decoration underline
		
		& img
			display block
			padding-top 7px