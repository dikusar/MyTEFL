.brochure
	padding 20px 14px
	background-color #f1f1f1
	border 1px solid #d9d9d9
	border-radius 3px
	overflow hidden
	
	&__title
		margin-bottom 35px
		line-heigt 55px
		font-size pixelsToEm(40)
		color #62a6d2
	
	&__content
		width 55%
		float left
		margin-right 30px
		@media (max-width:1182px)
			width 100%
			float none
	
	&__text
		margin-bottom 35px
		font-size pixelsToEm(18)
		color #444444
		line-height 25px
	
	&__footer
		padding 24px
		border 1px solid #d9d9d9
		border-radius 3px
	
	&__link
		@media (max-width:1182px)
			text-align center
		
		& p
			display inline-block
			float left
			margin-right 20px
			font-size pixelsToEm(24)
			color #444444
			line-height 29px
			@media (max-width:1182px)
				float none
		
		& a
			font-family PTSans-Bold
			color #366d8f
			text-decoration underline
		
		& img
			display inline-block
			padding-top 7px
	
	&__img
		@media (max-width:1182px)
			width 124px
			margin 0 auto
			margin-top 20px
			display block
		
		