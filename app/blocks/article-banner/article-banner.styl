.article-banner
	border 1px solid #d9d9d9
	
	.row&
		margin-left auto
		margin-right auto
		margin-bottom 40px
		@media $medium_and_down
			margin-left 0px
		
		&:last-of-type
			margin-bottom 0
	
	&__info
		padding-top 37px
		text-align center
		line-height pixelsToEm(33)
	
	&__list
		padding-top 37px
		padding-left 20px
		line-height pixelsToEm(30)
		list-style inherit
		&:first-of-type
			margin-left 30px

	
	&__title
		margin 6px 0
		font-size pixelsToEm(36)
		text-transform uppercase
		color #366d8f
		text-decoration underline

	&__text
		font-size pixelsToEm(24)
	
	&__btn
		display block
		width 305px
		margin-top 7px
		margin-bottom 24px
		margin-left 30px
		padding 13px 0
		background-color #efac1b
		color #366d8f
		text-transform uppercase
		font-size pixelsToEm(18)
		font-family PTSans-Bold
		text-align center
		@media (max-width:750px)
			width 100%
			margin-left 0
	
	&__img
		width 100%
	
	&__slider
		position relative
		width 355px
		margin-left 0
		@media (max-width:750px)
			width 100%
		
		&-btn_left,
		&-btn_right
			position absolute
			top 45%
			left 5px
			width 13px
			height 13px
			border 3px solid transparent
			border-left-color #366d8f
			border-bottom-color #366d8f
			z-index 1
			cursor pointer
			border-radius 4px
			transform rotate(45deg)
		
		&-btn_right
			left inherit
			right 10px
			transform rotate(-137deg)
