.banner
	position relative
	overflow hidden
	
	&__img
		display block
		height auto
	
	&__container
		position absolute
		top pixelsToEm(175)
		color white
		width 100%
		text-align center
		
		&_page_home
			top pixelsToEm(196)
	
	&__title
		margin-bottom 30px
		font-family PTSans-Bold
		font-size pixelsToEm(100)
	
	&__subtitle
		font-family PTSans-Bold
		font-size pixelsToEm(38)
		margin-bottom 107px
	
	&__text
		color #efac1b
		font-family PTSans-Bold
		font-size pixelsToEm(30)
		text-transform uppercase
		line-height 36px
		margin-bottom 107px
		
		&_color_white
			color #fff
			margin-bottom 3px
	
	&__text-before
		margin-bottom 25px
		font-family PTSans-Bold
		line-height 37px
		
		& span
			font-size pixelsToEm(38)
			
			&:first-of-type
				font-size pixelsToEm(28)

	
	&__footer
		
		&-btn
			display inline-block
			padding 10px 44px
			margin-top 12px
			font-family PTSans-Bold
			color #efac1b
			border 3px solid #efac1b
		
		&-btn_down
			position absolute
			bottom 30px
			left 50%
			right 50%
			transform translate(-50%)
			width 44px
			height 44px
			border 3px solid #fff
			border-radius 6px
			clear both
			cursor pointer
		
			&:after
				display block
				position absolute
				top 11px
				z-index 2
				content ''
				height 6px
				width 6px
				border 3px solid
				border-radius 4px
				border-color transparent
				border-right-color #fff
				border-bottom-color #fff
				transform rotate(45deg)
				left 13px
		
		&-calendar
			width 237px
			margin 0 auto
			margin-top 43px
			margin-bottom 20px
			overflow hidden
			
			&-item
				position relative
				float left
				margin-right 33px
				
				&:last-of-type
					margin-right 0
					
			&-integer
				position relative
				width 57px
				height 82px
				padding-top 26px
				margin-bottom 10px
				font-family PTSans-Bold
				font-size pixelsToEm(28)
				color #272727
				background #fefefe
				border-radius 4px
				background linear-gradient(to bottom,  #fefefe 0% , #f0f0f0 51%, #dcdcdc 100%)
				
				&:after
					position absolute
					top 49%
					left 0
					width 100%
					height 2px
					content ''
					background-color rgba(255, 255, 255, .3)
					z-index 1
			
			&-text
				text-transform uppercase
				font-size pixelsToEm(12)
	
	&__search
		position absolute
		z-index 1
		bottom 1px
		left 0
		right 0
		
		& .col
			padding 0
		
		&-blue
		&-yellow,
			position relative
			padding 38px 38px 38px 0
			background-color rgba(56, 102, 129, .7)
			overflow hidden
		
		&-yellow
			background-color rgba(231, 170, 37, .7)
			
			.banner__search-content
				float none
				padding-left 37px
		
		&-content
			position relative
			display inline-block
			float right
		
		&-title
			font-family PTSans-Bold
			font-size pixelsToEm(30)
			color #fff
		
		&-input
			width 386px
			height 50px
			padding-left 20px
			padding-right 36px
			margin-left 24px
			color #929292
			border-radius 3px
			border none
		
		&-btn
			position absolute
			top 17px
			right 7px
			width 24px
			height 24px
			z-index 2
			cursor pointer
			
			&:after
				position absolute
				top 2px
				left 7px
				display block
				content ""
				width 0
				height 0
				border-top 8px solid transparent
				border-bottom 8px solid transparent
				border-left 8px solid #494949