.banner
	overflow hidden
	
	&__img
		height auto
	
	&__container
		position absolute
		top pixelsToEm(275)
		color white
		width 100%
		text-align center
		
		&_page_home
			top pixelsToEm(196)
	
	&__title
		margin-bottom 30px
		font-family PTSans-Bold
		font-size pixelsToEm(100)
	
	&__subtitle
		font-family PTSans-Bold
		font-size pixelsToEm(38)
		margin-bottom 107px
	
	&__text
		color #efac1b
		font-family PTSans-Bold
		font-size pixelsToEm(30)
		text-transform uppercase
		line-height 36px
		margin-bottom 107px
	
	&__text-before
		margin-bottom 25px
		font-family PTSans-Bold
		line-height 37px
		
		& span
			font-size pixelsToEm(38)
			
			&:first-of-type
				font-size pixelsToEm(28)

	
	&__footer
		
		&-btn
			display inline-block
			padding 10px 44px
			margin-top 12px
			font-family PTSans-Bold
			color #efac1b
			border 3px solid #efac1b
		
		&-btn_down
			position relative
			margin 0 auto
			width 44px
			height 44px
			border 3px solid #fff
			border-radius 6px
			clear both
			cursor pointer
		
			&:after
				display block
				position absolute
				top 11px
				z-index 2
				content ''
				height 6px
				width 6px
				border 3px solid
				border-radius 4px
				border-color transparent
				border-right-color #fff
				border-bottom-color #fff
				transform rotate(45deg)
				left 13px
		
		&-calendar
			width 237px
			margin 0 auto
			margin-top 43px
			margin-bottom 20px
			overflow hidden
			
			&-item
				position relative
				float left
				margin-right 33px
				
				&:last-of-type
					margin-right 0
					
			&-integer
				position relative
				width 57px
				height 82px
				padding-top 26px
				margin-bottom 10px
				font-family PTSans-Bold
				font-size pixelsToEm(28)
				color #272727
				background #fefefe
				border-radius 4px
				background linear-gradient(to bottom,  #fefefe 0% , #f0f0f0 51%, #dcdcdc 100%)
				
				&:after
					position absolute
					top 49%
					left 0
					width 100%
					height 2px
					content ''
					background-color rgba(255, 255, 255, .3)
					z-index 1
			
			&-text
				text-transform uppercase
				font-size pixelsToEm(12)