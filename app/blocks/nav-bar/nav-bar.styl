.nav-bar
	position relative
	display block
	
	&_position_absolute
		position absolute
		left 0
		right 0
		z-index 1
		
		& .nav-bar__heading
			background-color rgba(217, 217, 217, .5)	
	
	&__heading
		background-color #ececec
	
	&__logo
		display block
		padding-top 12px
		padding-bottom 12px
	
	&__social
		overflow hidden
		padding-top 2px
		display inline-block
		float right
		
		&-item
			float left
		
		&-link
			display flex
			align-content center
			align-items center
			justify-content center
			height 73px
			
			&_bg_blue
				background-color #366d8f
			
		&-call
			sprite $phone
			
		&-googlePl
			sprite $googleplus
				
			&_white
				sprite $googlepluswhite
			
		&-instagram
			sprite $insta
				
			&_white
				sprite $instawhite
			
		&-twitter
			sprite $twit
				
			&_white
				sprite $twitwhite
			
		&-facebook
			sprite $facebook
				
			&_white
				sprite $f_white
				padding-top 20px
	
	&__menu
		height 57px
		background-color rgba(0, 0, 0, 0.6)
		position absolute
		left 0
		right 0
		bottom -57px
		z-index 1
		

		&-link
			display block
			position relative
			padding-top 18px
			padding-bottom 18px
			padding-left 18px
			padding-right 18px
			color white
			font-family PTSans-Bold
			text-decoration none
			font-size pixelsToEm(18)
			font-weight bold
			will-change color
			transition color .2s ease
			
			&:after
				display block
				position absolute
				top 8px
				left 0
				z-index 2
				content ''
				sprite $devider
			
			&:hover
				color lighten(#efac1b, 35%)
			
			&_active
				color #efac1b
				
				&:hover
					color #efac1b	
			
		
		&-item
			position relative
			float left
			
			&:last-of-type
				
				&:before
					display block
					position absolute
					top 8px
					right 0
					z-index 2
					content ''
					sprite $devider
					
	&__submenu
		position absolute
		z-index 2
		white-space nowrap
		top 52px
		left 0
		background-color #4f4f4f
		cursor pointer
		visibility hidden
		z-index -1
		opacity 0
		transform translate(0, -9px)
		will-change visibility, opacity, z-index
		transition visibility .25s ease-out, opacity .25s ease-out, z-index .25s ease-out, transform .25s ease-out .1s
		
		&:before
			position absolute
			top -7px
			left 23px
			content ''
			z-index 3
			width 0
			height 0
			border-left 8px solid transparent
			border-right 8px solid transparent
			border-bottom 8px solid #4f4f4f
		
		&-item
			display block
			position relative
			
			&:after
				display block
				position absolute
				bottom 0
				left 50%
				right 50%
				transform translate(-50%, 0)
				z-index 3
				content ''
				sprite $dropdowndivider
			
			&:last-of-type:after
				content none
			
		&-link
			position relative
			display block
			padding 20px 36px 20px 23px
			font-family PTSans-Bold
			color #fff
			will-change color
			transition color .2s ease
	
			&:hover
				color lighten(#efac1b, 35%)
			
			&_active
				color #efac1b
				
				&:hover
					color #efac1b
	
	&__menu-item:hover &__submenu
		visibility visible
		z-index 12
		opacity 1
		transform translate(0, 1px)
	

	&__login
		padding-top 7px
		text-align right
		
		&-btn
			position relative
			display inline-block
			padding 10px 37px 10px 27px
			color #efac1b
			text-decoration none
			font-family PTSans-Bold
			border 2px solid #efac1b
			border-radius 3px
			
			&:after
				display block
				position absolute
				top 15px
				z-index 2
				content ''
				height 3px
				width 3px
				border 3px solid
				border-radius 3px
				border-color transparent
				border-right-color #efac1b
				border-bottom-color #efac1b
				right 22px
				transform rotate(-52deg)
