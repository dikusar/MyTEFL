		.row.margin-bottom.container
			.col.l10.m10.s10
				ul.nav-bar__menu-list
					each item, i in menu
						li.nav-bar__menu-item
							a(class=i === 1 ? "nav-bar__menu-link nav-bar__menu-link_active" : "nav-bar__menu-link", href=jv0)
