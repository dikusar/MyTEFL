mixin article(data)
	-data = data || [];
		each elem in data
			.col.l6.m6.s12&attributes(attributes)
				article.article(class=elem.articleModClass ? "article_"+elem.articleModClass+"" : "")
					if elem.title
						.article__title(class=elem.titleModClass ? "article__title_"+elem.titleModClass+"" : "")
							|#{elem.title}
							if elem.titleIcon
								img.article__title-icon(src=elem.titleIcon, alt="img")
								
					each item in elem.items
						.article__item(style=item.style ? item.style : "")
							if item.img
								.article__item-avatar
									img(src=item.img, alt="img")
							.article__content
								if item.title
									.article__item-title
										|#{item.title}
								.article__item-text
									|#{item.text}
								if item.buttonText
									a.button-st1(href=jv0)
										=item.buttonText