.b-map
	position relative
	
	&__title
		position absolute
		top 0
		left 0
		right 0
		padding 30px 0
		background-color rgba(0, 0, 0, .5)
		text-align center
		color #fff
		font-size pixelsToEm(48)
		font-family PTSans-Bold
		text-transform uppercase
		@media $medium_and_down
			font-size 4.5vw
	
	&__img
		display block
		width 100%
