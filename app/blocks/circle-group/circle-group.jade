mixin circle-group-item(item, i)
	-item - item || {};
		.circle-group__item
			.circle-group__heading
				img.circle-group__img(src=item.imgSrc, alt="img")
				.circle-group__btn(class=i === 0 ? "circle-group__btn_yellow" : "")
					=item.btnText
			
			.circle-group__footer
				.circle-group__item-title.mt-20.mb-10
					=item.title
				p.circle-group__text
					=item.text

mixin circle-group(items)
	- items = items || [];
	.row.circle-group
		.col.l12.m12.s12
			h5.circle-group__title.pt-40.pb-50 Why US
		.col.l12.m12.s12.text-center
			span.circle-group__subtitle Accredited training with a socially responsible TEFL organization.
		
	.row.mt-60
		each item, i in items
			if i === 0
				.col.l4.m4.s4
					+circle-group-item(item, i)
			if i === 1
				.col.l4.m4.s4.text-center
					+circle-group-item(item, i)
			if i === 2
				.col.l4.m4.s4.text-right
					+circle-group-item(item, i)
					



