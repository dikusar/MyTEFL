mixin circle-group-item(item, i)
	-item = item || {};
		.circle-group__item
			a.circle-group__heading(class=item.heading_mode_class ? "circle-group__heading" + item.heading_mode_class : "" href=jv0)
				img.circle-group__img(src=item.imgSrc, alt="img")
				if item.btnText
					.circle-group__btn
						=item.btnText
			
			.circle-group__footer&attributes(attributes)
				.circle-group__item-title.mt-20.mb-10
					=item.title
				p.circle-group__text
					=item.text

mixin circle-group(items, isHeading, isBtnDown)
	- items = items || [];
	if isHeading
		.row.circle-group
			.col.l12.m12.s12
				h5.circle-group__title.pt-40.pb-50 Why US
			.col.l12.m12.s12.text-center.mb-60
				span.circle-group__subtitle Accredited training with a socially responsible TEFL organization.
		
	.row
		each item, i in items
			if i === 0
				.col.l4.m4.s4
					+circle-group-item(item, i)
			if i === 1
				.col.l4.m4.s4.text-center
					+circle-group-item(item, i)
			if i === 2
				.col.l4.m4.s4.text-right
					+circle-group-item(item, i)

	if isBtnDown
		.row.mt-30.mb-30
			.col.l12.m12.s12
				.circle-group__btn-down
					



