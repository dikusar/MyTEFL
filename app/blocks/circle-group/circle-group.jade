mixin circle-group-item(item)
	-item = item || {};
		.circle-group__item
			a.circle-group__heading(class=item.heading_mode_class ? "circle-group__heading" + item.heading_mode_class : "" href=jv0)
				img.circle-group__img(src=item.imgSrc, alt="img")
				if item.btnText
					.circle-group__btn
						=item.btnText
			
			.circle-group__footer&attributes(attributes)
				.circle-group__item-title.mt-20.mb-10
					=item.title
				p.circle-group__text
					=item.text

mixin circle-group(items, isHeading, isBtnDown)
	- items = items || [];
	if isHeading
		.row.circle-group
			.col.l12.m12.s12.hide-on-med-and-down 
				h5.circle-group__title.pt-40.pb-50 Why US
			.col.l12.m12.s12.text-center.mb-60.mb-md-20 
				span.circle-group__subtitle.hide-on-med-and-down Accredited training with a socially responsible TEFL organization.
				span.circle-group__subtitle.hide-on-large-only
					| Teaching English is one of the most amazing ways to discover the world! Get certified to teach with our accredited TEFL courses, depart on an exotic internship, or find teaching jobs around the world!
		
	.row
		
		//- Slider-swiper for mobile devices
		.col.s12.circle-group__item-wrapper.show-on-small
			.swiper-container.js-swiper-container-base
				.swiper-wrapper
					each item, i in items
						.swiper-slide
							+circle-group-item(item)
				.swiper-pagination.mt-30

		each item, i in items
			if i === 0
				.col.l4.m4.s12.hide-on-small-and-down
					+circle-group-item(item)
			if i === 1
				.col.l4.m4.s12.text-center.hide-on-small-and-down 
					+circle-group-item(item, i)
			if i === 2
				.col.l4.m4.s12.text-right.hide-on-small-and-down 
					+circle-group-item(item, i)
			

	if isBtnDown
		.row.mt-30.mb-30
			.col.l12.m12.s12
				.circle-group__btn-down
					



