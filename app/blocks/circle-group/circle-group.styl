.circle-group
	display block
	
	&__heading
		position relative
		display block
		text-align center
		
		&_hoverable
			display block
					
			&:before
				display block
				position absolute
				top 0
				left 0
				z-index 2
				content ''
				height 100%
				width 100%
				border-radius 50%
				background-color rgba(0, 0, 0, .0)
				will-change background-color
				transition .25s background-color ease-in
			
			&:hover:before
				background-color rgba(0, 0, 0, .5)
			
			&:hover .circle-group__btn
				color #efac1b
				border-color #efac1b
			
			

	
	&__title
		text-align center
		font-family PTSans-Bold
		font-size pixelsToEm(38)
		color #efac1b
		
	&__subtitle
		color #555555
		font-size pixelsToEm(22)
		line-height 29px
		@media $medium_and_down
			display block
			margin-top 30px
			padding 0 22px
	
	&__item-wrapper
		display none
		@media $small-and-down
			text-align center
		

	&__item
		display inline-block

		@media $medium_and_down
			width 50%
		
		&-title
			color #444444
			font-family PTSans-Bold
			font-size pixelsToEm(28)
			text-align center
			text-transform uppercase
			@media $medium_and_down
				font-size 3vw
			@media $small-and-down
				font-size 6vw
	

	&__text
		@media $small-and-down
			margin 0 auto
	
	
	&__footer
		width 222px
		text-align center
		margin 0 auto
		@media $medium_and_down
			width inherit
		
		&.width_auto
			width inherit
			
		&.page_why-tefl
			width 253px
	
	&__btn
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		white-space nowrap
		padding 10px 30px
		border 3px solid #fff
		color #fff
		text-transform uppercase
		font-size pixelsToEm(18)
		font-family PTSans-Bold
		will-change color, border-color
		transition .25s color ease-in, .25s border-color ease-in
		z-index 3
		will-change color, border-color
		transition .25s color ease-in, .25s border-color ease-in
		@media $medium_and_down
			font-size 2vw
		@media $small-and-down
			font-size pixelsToEm(18)
		
		&-down
			position relative
			margin 0 auto
			width 44px
			height 44px
			border 3px solid #c5c5c5
			border-radius 6px
			clear both
			cursor pointer
		
			&:after
				display block
				position absolute
				top 11px
				z-index 2
				content ''
				height 6px
				width 6px
				border 3px solid
				border-radius 4px
				border-color transparent
				border-right-color #c5c5c5
				border-bottom-color #c5c5c5
				transform rotate(45deg)
				left 13px
	
	&-small
		display flex
		justify-content space-between
		@media $medium_and_down
			flex-wrap wrap
			justify-content center
		
		.circle-group__footer
			@media $medium_and_down
				width 100%
		
		.circle-group__item
			@media $medium_and_down
				width 25%
				margin-right 20px
				margin-bottom 20px
			@media (max-width:480px)
				width 100%
				
		.circle-group__item-title
			color #366d8f
			font-size pixelsToEm(18)
		
		.circle-group__heading
			text-align center

@media $medium_and_down
	.swiper-slide .circle-group__item
			width auto
		
		

		
			
