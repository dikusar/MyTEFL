.circle-group
	display block
	
	&__heading
		position relative
	
	&__title
		text-align center
		font-family PTSans-Bold
		font-size pixelsToEm(38)
		color #efac1b
		
	&__subtitle
		color #555555
		font-size pixelsToEm(22)
	
	&__item
		display inline-block
		
		&-title
			color #444444
			font-family PTSans-Bold
			font-size pixelsToEm(28)
			text-align center
			text-transform uppercase
	
	&__footer
		width 222px
		text-align center
		margin 0 auto
		line-height 20px
	
	&__btn
		position absolute
		top 42%
		left 20%
		padding 10px 30px
		border 3px solid #fff
		color #fff
		text-transform uppercase
		font-size pixelsToEm(18)
		font-family PTSans-Bold
		
		&_yellow
			color #efac1b
			border-color #efac1b
		
		&-down
			position relative
			margin 0 auto
			width 44px
			height 44px
			border 3px solid #c5c5c5
			border-radius 6px
			clear both
			cursor pointer
		
			&:after
				display block
				position absolute
				top 11px
				z-index 2
				content ''
				height 6px
				width 6px
				border 3px solid
				border-radius 4px
				border-color transparent
				border-right-color #c5c5c5
				border-bottom-color #c5c5c5
				transform rotate(45deg)
				left 13px
		
			
