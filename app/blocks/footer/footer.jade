		.col.m3
			ul.footer__list-social
				each item,i in social
					if i >= 2 && i < 4
						li.footer__list-item-avatar(class="footer__list-item-"+item.classPefix+"")
							a(class=i === 2 ? "footer__list-link_blue" : "footer__list-link", href=jv0)
								span Join us on
								|<br>
								span=item.text
		.col.m2(style="padding-left:0;")
			ul.footer__list-social
				each item,i in social
					if i === 4
						li.footer__list-item-avatar(class="footer__list-item-"+item.classPefix+"")
							a(class=i === 2 ? "footer__list-link_blue" : "footer__list-link", href=jv0)
								span Join us on
								|<br>
								span=item.text




