-menu = ['MyTEFL.Net', 'About TEFL', 'Why TEFL', 'Courses', 'Enroll', 'TEFL Jobs', 'Giving back', 'FAQs', 'Offers', 'Blog'];
-programs = ['Programs', 'Thailand', 'China', 'South Africa'];
-pay = ['Payment Methods', '', ''];
-social = [{text: 'Facebook', classPefix: 'facebook'}, {text: 'Google+', classPefix: 'googleplus'}, {text: 'Instagram', classPefix: 'insta'}, {text: 'Twitter', classPefix: 'twit'}, {text:'Pinterest', classPefix: 'pinterest'}];


footer.footer
	.row.margin-bottom.container
		.col.l2.m2.s2
			ul.footer__list
				each item, i in menu
					li(class=i === 0 ? "footer__list-item-header" : "footer__list-item")
						a(class=i === 4 ? "footer__list-link_blue" : "footer__list-link", href=jv0)
							= item
		.col.l2.m2.s2
			ul.footer__list
				each item, i in programs
					li(class=i === 0 ? "footer__list-item-header" : "footer__list-item")
						a.footer__list-link(href=jv0)
							= item
			ul.footer__list-pay
				each item, i in pay
					li(class=i === 0 ? "footer__list-item-header" : "footer__list-item")
						if i==0
							a.footer__list-link(href=jv0)
								= item
						if i===1
							a.footer__list-link-visa(href=jv0)
								= item
						if i===2
							a.footer__list-link-master(href=jv0)
								= item
		.col.l4.m4.s4
			.footer__contact
				h5.footer__contact-header
					| Have any questions?
				.footer__contact-subheader
					| Call one of our friendly experts at:
				.footer__contact-content
					span Canada:&nbsp;
					span.footer__contact-text-blue 1.778.807.9619
					|<br>
					span USA:&nbsp;
					span.footer__contact-text-blue 1.917.580.3653
					|<br>
					span UK:&nbsp;
					span.footer__contact-text-blue 0.203.318.9697
				.footer__contact-footer
					| Or alternatively, you can request a call-back or contact us by Skype at
					span myTEFL
			.footer__search
				.footer__search-btn
				input.footer__search-input(type="text" placeholder="Search")
		.col.l2.m2.s2
			ul.footer__list-contact
				li.footer__list-item-heading
					div.footer__list-item-text_lead Requset
					div.footer__list-item-text_sub a callback
				li.footer__list-item
					a(class="footer__list-link-callback", href=jv0)
			ul.footer__list-mail.footer__list-contact
				li.footer__list-item-heading
					div.footer__list-item-text_lead Send Us
					div.footer__list-item-text_sub a mail
				li.footer__list-item
					a(class="footer__list-link-mail", href=jv0)
		.col.l2.m2.s2
			ul.footer__list-social
				each item,i in social
					li.footer__list-item-avatar(class="footer__list-item-"+item.classPefix+"")
						a(class=i === 2 ? "footer__list-link_blue" : "footer__list-link", href=jv0)
							span Join us on
							|<br>
							span=item.text

	.footer__sub
		.row.margin-bottom.container
			if footerSubBtn
				.footer__sub-btn
			.col.l6.m6.s6
				span Copyright Â© 2015 MyTEFL.net. All rights reserved.
			.col.l6.m6.s6
				ul.footer__sub-menu
					li.footer__sub-item 
						a.footer__sub-link(href=jv0) Terms & Conditions&nbsp;&nbsp;|&nbsp;&nbsp;
					li.footer__sub-item 
						a.footer__sub-link(href=jv0) Privacy Policy&nbsp;&nbsp;|&nbsp;&nbsp;
					li.footer__sub-item
						a.footer__sub-link_yellow(href=jv0) Sitemap
