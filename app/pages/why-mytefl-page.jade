extends /blocks/layout-default/layout-default
include ../blocks/circle-group/circle-group

block head
	- var pageTitle = 'My TEFL';
	- navbar_position_absolute = false;
	- whiteIcons = false;
	- footerSubBtn = false;

block content
	include ../blocks/nav-bar/nav-bar

	.row.container.mt-40.mb-40
		.col.l12
			.title-st-2.uppercase.mb-15.mt-40 Why Choose MyTEFL?
			p.content-p With over 35 years of combined TEFL experience, our team and partners make myTEFL a great choice. We've been teachers, training managers, writers, editors, publishers, consultants and just like you, travelers and adventurers at heart.

	.container
		.divider
		
		.flex.justify-between.mt-40.mb-40
			+circle-group-item({
				imgSrc: "assets/images/circle-group/accredited.png",
				title: "Professionally designed courses",
				text: "The ideal blend of theory and practicality"
			})(class="page_why-tefl")

			+circle-group-item({
				imgSrc: "assets/images/circle-group/accredited.png",
				title: "Accredited",
				text: "Accepted by employers around the world"
			})

			+circle-group-item({
				imgSrc: "assets/images/circle-group/online.png",
				title: "Online",
				text: "Convenience & value"
			})

			+circle-group-item({
				imgSrc: "assets/images/circle-group/onsite.png",
				title: "Onsite",
				text: "Experience and practice"
			})

			+circle-group-item({
				imgSrc: "assets/images/circle-group/support.png",
				title: "Support",
				text: "A dedicated tutor and our famous customer service"
			})

		.divider

		.flex.justify-between.mt-40.mb-40
			+circle-group-item({
				imgSrc: "assets/images/circle-group/job-placement.png",
