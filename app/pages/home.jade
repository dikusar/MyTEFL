extends /blocks/layout-default/layout-default
include ../blocks/banner/banner
include ../blocks/circle-group/circle-group
include ../blocks/article/article

block head
	- var pageTitle = 'My TEFL';
	- navbar_position_absolute = true;
	- whiteIcons = true;
	- footerSubBtn = true;

block content
	include ../blocks/nav-bar/nav-bar

	+banner({
		banner_mode_class: "_page_home",
		banner_container_mode_class: "_page_home",
		
		bannerBeforeText: {
			lineFist: "Want to teach English and live abroad?",
			lineSecond: "We make it happen!"
		},

		bannerTitle: "Accredited TEFL Courses.",
		bannerTitleSecondLine: "Real Job Placements",

		calendar: [
			{
				text: "Hours",
				integers: ["2", "4"]	
			},
			{
				text: "Minutes",
				integers: ["1", "1"]
			},
			{
				text: "Seconds",
				integers: ["0", "3"]
			}
		],

		bannerSearch: true,
		btn_down_mod_class: '_page_home'
	})

	.container
		+circle-group([
			{
				imgSrc: "assets/images/circle-group/courses.png",
				heading_mode_class: '_hoverable',
				title: "Courses",
				text: "Accredited TEFL training and certification.",
				btnText: "GET CERTIFIED"
			},
			{
				imgSrc: "assets/images/circle-group/tefl-programs.png",
				heading_mode_class: '_hoverable',
				title: "TEFL Programs",
				text: "Get experience, training and see the world!",
				btnText: "BOOK ADVENTURE"
			},
			{
				imgSrc: "assets/images/circle-group/job-placements.png",
				heading_mode_class: '_hoverable',
				title: "Job Placements",
				text: "Graduate with us and Get employed.",
				btnText: "GET EMPLOYED"
			}
		], isHeading=true, isBtnDown=true)
	
	include ../blocks/prise/prise

	.row.flex.flex-home-page.mb-0
		.col.m12.s12.mt-25.mb-25.hide-on-large-only
			.title-st-1.uppercase.text-center Make a Difference

		.col.l6.m12.s12.padding-right.padding-left
			img(src="assets/images/page_home/img-1.jpg" alt="img" width="100%" height="100%")

		+article([
				{
					title: 'Make a Difference',
					items:[
						{
							text: "MyTEFL courses help make a difference to lives around the world. For each course provided, we make a contribution to one of our inspiring partner charities.",
							buttonText: "Meet them"
						}
					]
				}
			])(class="article_page_home")

	include ../blocks/map/map
	
	include ../blocks/banner-blue/banner-blue

	include ../blocks/course-enroll/course-enroll

	include ../blocks/footer-banner/footer-banner
	include ../blocks/footer/footer